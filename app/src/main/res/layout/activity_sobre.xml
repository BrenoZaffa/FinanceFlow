<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <include
        android:id="@+id/header"
        layout="@layout/view_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- CARD: Desenvolvedores -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDevs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- TÃ­tulo -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_people"
                            app:tint="@color/principal"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/desenvolvedores"
                            android:textStyle="bold"
                            android:textSize="18sp"/>
                    </LinearLayout>

                    <!-- Breno -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Breno Zaffalon"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_whatsapp"
                            app:tint="@color/green"
                            android:layout_marginEnd="6dp"/>

                        <TextView
                            android:id="@+id/whatsBreno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="+55 42 9826-2655"
                            android:textColor="@color/principal"
                            android:clickable="true"
                            android:focusable="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_github"
                            app:tint="@color/black"
                            android:layout_marginEnd="6dp"/>

                        <TextView
                            android:id="@+id/gitBreno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="github.com/BrenoZaffa"
                            android:textColor="@color/principal"
                            android:clickable="true"
                            android:focusable="true"/>
                    </LinearLayout>

                    <!-- Cleverson -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cleverson Ramos"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_whatsapp"
                            app:tint="@color/green"
                            android:layout_marginEnd="6dp"/>

                        <TextView
                            android:id="@+id/whatsCleverson"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="+55 43 99663-1215"
                            android:textColor="@color/principal"
                            android:clickable="true"
                            android:focusable="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_github"
                            app:tint="@color/black"
                            android:layout_marginEnd="6dp"/>

                        <TextView
                            android:id="@+id/gitCleverson"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="github.com/cleverson-tiago-ramos"
                            android:textColor="@color/principal"
                            android:clickable="true"
                            android:focusable="true"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CARD: Sobre o Projeto -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProjeto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_info"
                            app:tint="@color/principal"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sobre o projeto"
                            android:textStyle="bold"
                            android:textSize="18sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="4dp"
                        android:text="@string/trabalho_final_android_aplicado_ntrabalho_em_dupla_n_ncurso_de_p_s_gradua_o_em_dispositivos_m_veis_utfpr_campus_pato_branco_n_nobjetivo_desenvolver_um_aplicativo_nativo_android_em_kotlin_para_controle_financeiro_permitindo_registrar_entradas_e_sa_das_visualizar_hist_rico_e_persistir_dados_localmente_aplicando_boas_pr_ticas_de_arquitetura_como_mvc_ou_mvvm"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
